@model Practise.Models.AdminUpdateProfile
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("AdminProfile", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="container-db">
    <h1>My Profile</h1>
    @Html.HiddenFor(x => x.UserID)
    <div class="row mp01">
        <div class="col-md-6 form-group">
            <label for="exampleInputtitle">First Name<span class="required">*</span></label>
            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control mp02", @placeholder = "Enter your first name" })
            @Html.ValidationMessageFor(x => x.FirstName, "", new { @class = "text-danger" })
            
            <label for="exampleInputtitle">Last Name<span class="required">*</span></label>
            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control mp02", @placeholder = "Enter your last name" })
            @Html.ValidationMessageFor(x => x.LastName, "", new { @class = "text-danger" })
            
            <label for="exampleInputtitle">Email<span class="required">*</span></label>
            @Html.TextBoxFor(x => x.EmailID, new { @class = "form-control mp02", @placeholder = "Enter your email address", @readonly = "readonly" })
            @Html.ValidationMessageFor(x => x.EmailID, "", new { @class = "text-danger" })
            
            <label for="exampleInputtitle">Secondary Email</label>
            @Html.TextBoxFor(x => x.SecondaryEmailAddress, new { @class = "form-control mp02", @placeholder = "Enter your secondery email address" })
            @Html.ValidationMessageFor(x => x.SecondaryEmailAddress, "", new { @class = "text-danger" })
            
            <label for="exampleInputtitle">Phone Number</label>
            <div class="row">

                <div class="col-md-2">
                    @Html.DropDownList("CountryCode", new SelectList(ViewBag.CountryCode, "ID", "CountryCode"), "", new { @class = "ph-no form-control"})
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control mp03", @placeholder = "Enter your phone number" })
                    @Html.ValidationMessageFor(x => x.PhoneNumber, "", new { @class = "text-danger" })
                </div>
            </div>
            <label class="picture"><span>Profile Picture</span></label>
            <input type="file" class="form-control exampleInputpicture02" placeholder="Upload a picture" name="ProfilePicture" onchange="return profileValidation()">

        </div>
    </div>
    <button type="submit" class="btn btn-primary btn-md btn-submit">SUBMIT</button>
</div>
}