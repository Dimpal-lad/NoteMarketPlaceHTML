@model Practise.Models.ForgotPsw
@{
    Layout = "~/Views/Shared/_LoginRegisterLayout.cshtml";
}


<section id="login-page">
    <!--Logo-->
    <div id="logo-fp" class="text-center">
        <img src="~/Content/images/pre-login/top-logo.png" alt="logo" />
        @*<img src="images/pre-login/top-logo.png" alt="logo">*@
    </div>
    <!--Forgot Password-->
    <div class="container">
        <div class="fp text-center">
            <h2>Forgot Password?</h2>
            <p>Enter your email to reset your password</p>
        </div>
        <!--Form-->
        @using (Html.BeginForm("ForgotPassword", "User", FormMethod.Post, new { }))
        {
            <div class="text-danger">
                @ViewBag.ErrorMsg
            </div>
            <div class="row" id="email">
                <div class="col-md-12">
                    <label for="exampleInputEmail1">Email</label>
                    @*<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">*@<br>
                    @Html.TextBoxFor(x => x.EmailID, new { @class = "form-control", @id = "exampleInputEmail1", @placeholder = "Enter email" })
                    @Html.ValidationMessageFor(x => x.EmailID, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary btn-lg btn-block" id="btn-submit"><span>SUBMIT</span></button>
                </div>
            </div>
        }
        </div>

    </section>
    <!--Forgot Password Ends-->
